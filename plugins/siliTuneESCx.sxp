def refresh_prest() :
    try:
        prest = my_node.variable("/driver/prest")
        prestval = prest.get() & 0x0F
    except sxapi.error as e:
       MessageBox(app, title="siliTune", message="Could not access '/driver/prest' !\nThe device firmware is either not compatible with this tool or you do not have enough access rights.\n" + str(e))
       return

    prestbox.set(initmodes[prestval+2])

    try:
        my_node.variable("/driver/vcf")
        prestbox.configure(values=initmodes)
    except sxapi.error as e:
        prestbox.configure(values=initmodes_bldc)


def refresh() :
    for i in range(len(main_params)):
        main_params[i].get()

    refresh_prest()
    tabview_callback()

