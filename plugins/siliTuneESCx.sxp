def save() :
    retval = my_node.executeSimple("save", "-y")
    if retval < 0:
        MessageBox(app, title="siliTune", message="Saving parameters resulted into error " + str(retval))
    else:
        refresh()
        MessageBox(app, title="siliTune", message="Saving of parameters was successful!")

